---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  target?: string
}

const { target, href, className, ariaLabel, title, disabled = false } = Astro.props;
---

{
  disabled ? (
    <span
      class={`group inline-block ${className}`}
      aria-label={ariaLabel}
      title={title}
      aria-disabled={disabled}
      >
      <slot />
      </span>
      ) : (
        <a
        {href}
        class={`group inline-block hover:text-skin-accent ${className}`}
        aria-label={ariaLabel}
        title={title}
        target={target}
    >
      <slot />
    </a>
  )
}
